<% if user_signed_in? %>
	<div class="col-md-6 col-md-offset-3">
		<% @projects.each do |project| %>
			<div class="index-wrapper">	
					<div class="row projects">
						<div class="col-md-8">
							<h2 class="project-name"><%= link_to project.name, project %></h2>
							<p style="opacity: 0.5;" class="time-created-at projects-sub-name">Created <%= time_ago_in_words(project.created_at) %> ago</p>
						</div>
						<div class="col-md-2">
							<p><%= link_to project, method: :delete, data: { confirm: "Are you sure?" } do %></p>
								<i class="fa fa-trash fa-lg"></i>
							<% end %>
              <p><%= link_to edit_project_path(project) do %></p>
								<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
							<% end %>
						</div>
					</div>
			</div>

		<% end %>	
    <center><%= will_paginate @projects %></center>
	</div>
  
<% else %>
	<%= render 'static_landing_page' %>
<% end %>	
