	<div class="col-md-6 col-md-offset-3">
		<% tasks.each do |task| %>
			<div class="index-wrapper">	
					<div class="row tasks">
						<div class="col-md-8">
							<h2 class="task-name"><%= task.name %></h2>
						</div>
						<div class="col-md-2">
							<p><%= link_to project_task_path(project, task), method: :delete, data: { confirm: "Are you sure?" } do %></p>
								<i class="fa fa-trash fa-lg"></i>
							<% end %>
              <p><%= link_to edit_project_task_path(project, task) do %></p>
								<i class="fa fa-pencil-square-o" aria-hidden="true"></i>
							<% end %>
						</div>
					</div>
			</div>

		<% end %>	
    <center><%= will_paginate @tasks %></center>
	</div>
